{% extends 'base.jinja2' %}

{% block subtitle %}Add a Donation{% endblock subtitle %}

{% block content %}

<form method="POST">
    {% if error %}<p>{{ error }}</p>{% endif %}
    <label for="donorname-input">Donor Name: </label><input id="donorname-input" type="text" name="name">
    <label for="donationamount-input">Donation Amount: </label><input id="donationamount-input" type="number" name="amount">
    <input type="submit" value="Add Donation!">
</form>
{% endblock content %}